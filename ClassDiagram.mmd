classDiagram
    %% Abstract Base Class
    class User {
        -String userID
        -String username
        -String password
        -String email
        -String fullName
        -String phoneNumber
        -String gender
        -int age
        -String role
        -Date createdDate
        -boolean isActive
        -boolean isApproved
        +getUserID()
        +getUsername()
        +getPassword()
        +getEmail()
        +getFullName()
        +displayMenu()*
        +handleAction()*
    }

    %% User Subclasses
    class Student {
        -String studentID
        -String enrollmentYear
        -List registeredClasses
        -List takenAssessments
        -List receivedFeedback
        +registerClass()
        +addTakenAssessment()
        +receiveFeedback()
        +getStudentID()
        +getRegisteredClasses()
    }

    class Lecturer {
        -String lecturerID
        -String staffID
        -String department
        -String academicLeaderID
        -List assignedModules
        -List createdAssessments
        -List providedFeedback
        +getAssignedModules()
        +addAssessment()
        +provideFeedback()
    }

    class AcademicLeader {
        -String department
        -String leaderID
        -String staffID
        -List assignedLecturers
        -List managedModules
        +createModule()
        +assignLecturer()
        +managedModules()
    }

    class AdminStaff {
        -String department
        -String staffID
        +getDepartment()
        +getStaffID()
    }

    %% Domain Classes
    class Module {
        -String moduleID
        -String moduleName
        -String moduleCode
        -String description
        -int creditHours
        -String department
        +getModuleID()
        +getModuleName()
        +getModuleCode()
        +getCreditHours()
    }

    class ClassModule {
        -String classID
        -String className
        -String moduleID
        -Lecturer lecturer
        -List enrolledStudents
        -int capacity
        -String day
        -String time
        -String location
        -Module module
        +enrollStudent()
        +getEnrolledStudents()
        +getClassID()
    }

    class Assessment {
        -String assessmentID
        -String assessmentName
        -AssessmentType assessmentType
        -Module module
        -Lecturer createdBy
        -String classID
        -String status
        -Date createdDate
        -Date dueDate
        -Map studentMarks
        +addMark()
        +getMark()
        +getAssessmentID()
    }

    class AssessmentType {
        -String typeID
        -String assessmentType
        -double weightage
        +getAssessmentType()
        +getWeightage()
    }

    class Feedback {
        -String feedbackID
        -String assessmentID
        -String studentID
        -String lecturerID
        -String feedbackContent
        -Date feedbackDate
        -double suggestedMarks
        -String comments
        -boolean isDelivered
        +deliverFeedback()
        +getFeedbackID()
        +getFeedbackContent()
    }

    class GradingSystem {
        -String systemID
        -String systemName
        -List grades
        -double passingPercentage
        +initializeDefaultGrades()
        +calculateGrade()
        +getGrades()
    }

    class GradingScale {
        -String gradeID
        -String grade
        -int minMark
        -int maxMark
        -String description
        -double gradePoint
        +getGrade()
        +getGradePoint()
    }

    class Announcement {
        -String announcementID
        -String title
        -String content
        -String senderID
        -String audience
        -Date createdDate
        +getAnnouncementID()
        +getContent()
        +getSenderID()
    }

    %% System Manager
    class SystemManager {
        -List users
        -List modules
        -List classes
        -List assessments
        -List feedbackList
        -List announcements
        -GradingSystem gradingSystem
        -User currentUser
        +loadAllData()
        +createModule()
        +addUser()
        +updateUser()
        +deleteModule()
        +getAllModules()
        +getAllUsers()
        +getAssessments()
    }

    %% File Manager
    class FileManager {
        -USERS_FILE
        -MODULES_FILE
        -CLASSES_FILE
        -ASSESSMENTS_FILE
        -FEEDBACK_FILE
        -ANNOUNCEMENTS_FILE
        +loadAllUsers()
        +saveUser()
        +loadAllModules()
        +saveModule()
        +loadAllAssessments()
        +saveAssessment()
    }

    %% Dashboard Classes
    class AcademicLeaderDashboard {
        -SystemManager systemManager
        -AcademicLeader leader
        +buildModuleManagementPanel()
        +buildAssignLecturersPanel()
        +buildEditProfilePanel()
        +buildReportsPanel()
    }

    class LecturerDashboard {
        -SystemManager systemManager
        -Lecturer lecturer
        +showDesignAssessment()
        +showKeyInMarks()
        +showProvideFeedback()
        +showMyModules()
    }

    class StudentDashboard {
        -SystemManager systemManager
        -Student student
        +showViewMarks()
        +showFeedback()
        +showViewAssessment()
    }

    class AdminDashboard {
        -SystemManager systemManager
        -AdminStaff admin
        +showUserManagement()
        +showClassCreation()
        +showGradingSystem()
    }

    %% Login/Registration
    class AFSLoginFrame {
        -SystemManager systemManager
        +login()
        +validateCredentials()
    }

    class AFSRegistrationFrame {
        -SystemManager systemManager
        +register()
        +validateInput()
    }

    class main {
        +main()
    }

    %% Relationships
    User <|-- Lecturer
    User <|-- Student
    User <|-- AcademicLeader
    User <|-- AdminStaff

    Module <-- ClassModule : has
    Module <-- Assessment : assesses
    Module <-- AcademicLeader : manages
    Module <-- Lecturer : assigned

    Lecturer <-- ClassModule : teaches
    Lecturer <-- Assessment : creates
    Lecturer <-- Feedback : provides

    Student <-- ClassModule : enrolls
    Student <-- Assessment : takes
    Student <-- Feedback : receives

    Assessment <-- AssessmentType : has
    Assessment <-- Feedback : generates

    GradingSystem <-- GradingScale : contains

    SystemManager <-- User : manages
    SystemManager <-- Module : manages
    SystemManager <-- ClassModule : manages
    SystemManager <-- Assessment : manages
    SystemManager <-- Feedback : manages
    SystemManager <-- Announcement : manages
    SystemManager <-- GradingSystem : uses

    FileManager <-- User : persists
    FileManager <-- Module : persists
    FileManager <-- Assessment : persists
    FileManager <-- Feedback : persists

    AcademicLeaderDashboard <-- SystemManager : uses
    AcademicLeaderDashboard <-- AcademicLeader : displays

    LecturerDashboard <-- SystemManager : uses
    LecturerDashboard <-- Lecturer : displays

    StudentDashboard <-- SystemManager : uses
    StudentDashboard <-- Student : displays

    AdminDashboard <-- SystemManager : uses
    AdminDashboard <-- AdminStaff : displays

    AFSLoginFrame <-- SystemManager : validates
    AFSRegistrationFrame <-- SystemManager : registers
